@model Category

<form asp-action="Create" asp-controller="Category" method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h3>Create Category</h3><div>
		<hr />
		<div class="mb-3 row p-1">
			<label asp-for="Name"class="p-0"></label>
			<input asp-for="Name" class="form-control" type="text" />

		</div>

		<div class="mb-3 row p-1">
			<label asp-for="DisplayOrder" class="p-0"></label>
			<input asp-for="DisplayOrder" class="form-control"/>

		</div>
		<div class="row">
					<div class="col-6 col-md-3"><button type="submit" class="btn btn-primary form-control">Create</button></div>
					<div class="col-6 col-md-3"><a asp-controller="Category" asp-action="Index"  class="btn btn-secondary border form-control">Back to List</a></div>
		</div>
				
				
	</div>
</form>
