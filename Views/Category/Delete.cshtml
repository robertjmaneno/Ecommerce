@model Category

<form asp-action="Delete" method="post">
	<input type="hidden" asp-for="CategoryId" />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h3>Edit Category</h3><div>
				<hr />
				<div class="mb-3 row p-1">
					<label asp-for="Name" class="p-0"></label>
					<input asp-for="Name" class="form-control" type="text" disabled  />
					<span asp-validation-for="Name" class="text-danger"></span>

				</div>

				<div class="mb-3 row p-1">
					<label asp-for="DisplayOrder" class="p-0"></label>
					<input asp-for="DisplayOrder" class="form-control" disabled />
					<span asp-validation-for="DisplayOrder" class="text-danger"></span>

				</div>
				<div class="row">
					<div class="col-6 col-md-3"><button type="submit" class="btn btn-danger form-control">Delete</button></div>
					<div class="col-6 col-md-3"><a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">Back to List</a></div>
				</div>


			</div>
</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}

}

